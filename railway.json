{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK"
  },
  "services": [
    {
      "name": "backend",
      "rootDir": "backend",
      "build": {
        "command": "npm ci"
      },
      "startCommand": "npm start"
    },
    {
      "name": "frontend",
      "rootDir": "frontend",
      "build": {
        "command": "npm ci && npm run build"
      },
      "startCommand": "npx serve -s build -l $PORT",
      "routes": [
        {
          "path": "/",
          "src": "/"
        }
      ]
    }
  ]
}